import random
n = int(input('Escribe la cantidad de dígitos binarios que deseas ingresar '))
x = range(20)
lista=[]
print('ingresa uno por uno los dígitos binarios ')
for i in range(n):
  lista.append(int(input()))
## 2. Procede con la simulación del ruido que modifica la información 
k=1
for j in range(n):
  if lista[j]==0:
    proba1=random.choice(x)
    if proba1>17:          # 10% de probabilidad de cambiar si es 0
      lista[j]=1
      i=3*k
      k+=1
  else:
    proba2=random.choice(x)
    if proba2>18:          # 5% de probabilidad de cambiar si es 1
      lista[j]=0
      i=3*k
      k+=1
print(lista) # muestra el mensaje en binario y sus errores por el ruido (si hubo alguno)
## 3. Corregir la información si ésta ha sido modificada 
lista_corregida=[]
cont,conts,j=0,0,0 # variables de cuenta
for i in range(n):
  if lista[i]==1:
    cont+=1
    if cont==2:
      lista_corregida.append(1)
      cont=0
  else:
    conts+=1
    if conts==2:
      lista_corregida.append(0)
      conts=0
  if i==3*j+2:
    cont,conts=0,0
    j+=1
print(lista_corregida)
